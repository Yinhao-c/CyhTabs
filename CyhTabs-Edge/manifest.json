{
  "manifest_version": 3,
  "name": "CyhTabs",
  "version": "1.0.0",
  "description": "Effortlessly organize your browser tabs into groups, save them, and reopen them with a single click.",
  "permissions": [
    "tabs",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16_dark.png",
      "48": "icons/icon48_dark.png",
      "128": "icons/icon128_dark.png"
    }
  },
  "icons": {
    "16": "icons/icon16_dark.png",
    "48": "icons/icon48_dark.png",
    "128": "icons/icon128_dark.png"
  }
}

